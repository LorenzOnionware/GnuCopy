<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Project1.Delete"
        Title="Delete" Background="Gray" Foreground="Black">
    <StackPanel Orientation="Horizontal">
        <Label Content="Would you really delete it?" Foreground="Red"></Label>
        <Button Name="DeleteButton" Content="Delete" Click="DeleteButton_OnClick"></Button>
        <Button Name="Cancel" Content="Cancel" Click="Cancel_OnClick"></Button>
    </StackPanel>
</Window>
